{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build:dev",
        "type": "npm",
        "script": "build:dev",
      },
      {
        "label": "Clean Packed Shared",
        "type": "shell",
        "command": "rm pc-nrfconnect-shared-*.tgz || echo 0",
        "windows": {
          "command": "(rm pc-nrfconnect-shared.tgz) -and (echo 0)",
        },
      },
      {
        "label": "Pack Shared and Install",
        "type": "shell",
        "command": "npm pack ${SharedWorkspace} && npm i pc-nrfconnect-shared-*.tgz",
        "windows": {
          "command": "(npm pack $Env:SharedWorkspace) -and (mv ./pc-nrfconnect-shared-*.tgz pc-nrfconnect-shared.tgz) -and (npm i ./pc-nrfconnect-shared.tgz) -and (echo 0)",
        },
      },
      {
        "label": "Install Local Shared",
        "dependsOn": ["Clean Packed Shared", "Pack Shared and Install"] 
      }
    ]
  }